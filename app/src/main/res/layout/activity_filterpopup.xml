<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    app:cardCornerRadius="30dp"
    android:layout_width="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:padding="10dp"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="FILTER OPTIONS"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="362dp"
            android:layout_height="44dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="32dp"
            android:text="Ville"
            android:textColor="@color/black"
            android:textSize="35sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title" />

        <HorizontalScrollView
            android:id="@+id/scrollViewer1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView1">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/ville1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.chip.Chip
                    android:id="@+id/ville2"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:checked="true"
                    android:text="Douala"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    app:chipBackgroundColor="#EE0008" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/ville3"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Yaounde"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    app:chipBackgroundColor="#EE0008" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/ville4"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Garoua"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    app:chipBackgroundColor="#EE0008" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/ville5"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Buea"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    app:chipBackgroundColor="#EE0008" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/ville6"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Kribi"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    app:chipBackgroundColor="#EE0008" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/ville7"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Bamenda"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    app:chipBackgroundColor="#EE0008" />

                <com.google.android.material.chip.Chip

                    android:id="@+id/ville8"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Bertoua"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    app:chipBackgroundColor="#EE0008" />

            </com.google.android.material.chip.ChipGroup>

        </HorizontalScrollView>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="362dp"
            android:layout_height="44dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="32dp"
            android:text="Region"
            android:textColor="@color/black"
            android:textSize="35sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/scrollViewer1" />

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/region1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.chip.Chip
                    android:id="@+id/region2"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:checked="true"
                    android:text="Littoral"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    app:chipBackgroundColor="#EE0008" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/region3"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Ouest"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    app:chipBackgroundColor="#EE0008" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/region4"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Nord"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    app:chipBackgroundColor="#EE0008" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/region5"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Sud-Ouest"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    app:chipBackgroundColor="#EE0008" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/region6"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Est"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    app:chipBackgroundColor="#EE0008" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/region7"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Sud"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    app:chipBackgroundColor="#EE0008" />

                <com.google.android.material.chip.Chip

                    android:id="@+id/region8"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Adamaoua"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    app:chipBackgroundColor="#EE0008" />

            </com.google.android.material.chip.ChipGroup>

        </HorizontalScrollView>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="362dp"
            android:layout_height="44dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="32dp"
            android:text="Maximum price"
            android:textColor="@color/black"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="388dp"
            android:layout_height="51dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:inputType="number"
            android:textAlignment="center"
            android:textSize="35sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <Button
            android:id="@+id/cancel"
            android:layout_width="135dp"
            android:layout_height="51dp"
            android:text="Cancel"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editText" />

        <Button
            android:id="@+id/submit"
            android:layout_width="135dp"
            android:layout_height="51dp"
            android:text="Submit"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editText" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>